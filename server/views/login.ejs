<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Login</title>
  </head>
  <body>
    <h1>Sign in</h1>
    <form action="/login/password" method="post">
      <div>
        <label>
          Username
          <input name="username" required autofocus />
        </label>
      </div>
      <div>
        <label>
          Password
          <input name="password" type="password" required />
        </label>
      </div>
      <div>
        <button type="submit">Sign in</button>
      </div>
    </form>
  </body>
</html>
